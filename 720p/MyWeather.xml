<window type="dialog" id="2600">
	<defaultcontrol>3</defaultcontrol>
	<controls>
	<!-- Background_Wallpaper -->
		<control type="multiimage">
			<include>BackgroundVarsGlobal</include>
			<include>BackgroundVarsWeather</include>
		</control>
	<!-- change location button -->
		<control type="group">
			<posx>496</posx>
			<posy>283</posy>
			<width>289</width>
			<height>155</height>
			<animation type="WindowOpen" reversible="false">
				<effect type="zoom" start="80" end="100" center="640,360" easing="out" tween="back" time="300" />
				<effect type="fade" start="0" end="100" time="300" />
			</animation>
			<animation type="WindowClose" reversible="false">
				<effect type="zoom" start="100" end="80" center="640,360" easing="in" tween="back" time="300" />
				<effect type="fade" start="100" end="0" time="200" />
			</animation>
			<control type="image">
				<description>background top image</description>
				<posx>0</posx>
				<posy>-20</posy>
				<width>275</width>
				<height>20</height>
				<texture>dialogs/context_top.png</texture>
			</control>
			<control type="image">
				<description>background image</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>275</width>
				<height>90</height>
				<texture>dialogs/context_middle.png</texture>
			</control>
			<control type="image">
				<description>background bottom image</description>
				<posx>0</posx>
				<posy>90</posy>
				<width>275</width>
				<height>18</height>
				<texture>dialogs/context_bottom.png</texture>
			</control>
			<control type="group">
				<posx>3</posx>
				<posy>0</posy>
				<width>273</width>
				<height>90</height>
				<include>Animation_CommonFadeQuick</include>
				<control type="label">
					<posx>0</posx>
					<posy>0</posy>
					<width>270</width>
					<height>40</height>
					<label>396</label>
					<textcolor>FF383838</textcolor>
					<aligny>center</aligny>
					<align>center</align>
					<font>Font_SettingsSectionTitle</font>
				</control>
				<control type="label">
					<posx>15</posx>
					<posy>30</posy>
					<width>240</width>
					<height>40</height>
					<info>Weather.Location</info>
					<textcolor>FF383838</textcolor>
					<aligny>center</aligny>
					<align>center</align>
					<font>Font_SettingsOptions</font>
				</control>
				<control type="spincontrolex" id="3">
					<description>change location button</description>
					<posx>135</posx>
					<posy>60</posy>
					<width>40</width>
					<textcolor>00bbbbbb</textcolor>
					<focusedcolor>00FFFFFF</focusedcolor>
					<textureup>settings/spin-up.png</textureup>
					<texturedown>settings/spin-down.png</texturedown>
					<textureupfocus>settings/spin-up-focus.png</textureupfocus>
					<texturedownfocus>settings/spin-down-focus.png</texturedownfocus>
					<font>Font_SettingsOptions</font>
					<disabledcolor>00d0d0d0</disabledcolor>
					<aligny>center</aligny>
					<align>-</align>
					<textoffsetx>130</textoffsetx>
					<spinposx>-2</spinposx>
					<spinwidth>40</spinwidth>
					<spinheight>65</spinheight>
					<include>Animation_SettingsButtonFade</include>
				</control>
			</control>
		</control>
	</controls>
</window>